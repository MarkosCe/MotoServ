<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MotoServ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- tema para el saplash screen. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- fondo de nuestro splash. -->
        <item name="windowSplashScreenBackground">@color/second_color</item>
        <!-- icono del splash. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- tiempo de la duración de la animación. -->
        <item name="windowSplashScreenAnimationDuration">300</item>
        <!-- theme posterior al splash. -->
        <item name="postSplashScreenTheme">@style/Theme.MotoServ</item>
    </style>
    
    <!-- Tema para el Toolbar -->
</resources>