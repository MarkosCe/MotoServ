<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartedActivity"
    android:background="@color/primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <io.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:elevation="4dp"
                app:shape_circle_borderColor="@color/color_tint"
                app:shape_circle_borderWidth="2dp"
                android:layout_marginTop="-105dp"
                android:layout_marginStart="-60dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_tint"/>

            </io.github.florent37.shapeofview.shapes.CircleView>

            <io.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="450dp"
                android:layout_height="450dp"
                android:elevation="4dp"
                app:shape_circle_borderColor="@color/color_tint_op"
                app:shape_circle_borderWidth="2dp"
                android:layout_marginTop="-235dp"
                android:layout_marginStart="-65dp"
                android:alpha="0.1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_tint"/>

            </io.github.florent37.shapeofview.shapes.CircleView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MotoServ"
            android:textColor="@color/white_color"
            android:textStyle="bold"
            android:textSize="55sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido!!!"
            android:textSize="18sp"
            android:textColor="@color/white_color"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <io.github.florent37.shapeofview.shapes.ArcView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:elevation="4dp"
                app:shape_arc_height="45dp"
                app:shape_arc_position="top"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/second_color"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_signin_google"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white_color"
                    app:cornerRadius="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary_color"
                    android:text="Continuar con Google"
                    android:textColor="@color/primary_color"
                    android:drawableLeft="@drawable/ic_google" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_facebook"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/fb_color"
                    app:cornerRadius="16dp"
                    android:text="Continuar con Facebook"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_facebook"/>

            </io.github.florent37.shapeofview.shapes.ArcView>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>