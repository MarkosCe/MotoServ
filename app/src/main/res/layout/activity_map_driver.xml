<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".driver.MapDriverActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:fabSize="mini"
        android:src="@drawable/ic_home"
        android:backgroundTint="@color/color_tint"
        app:borderWidth="0dp"
        android:layout_gravity="right"
        android:layout_margin="30dp"
        android:contentDescription="back button" />

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_notifications_32"
        android:backgroundTint="@color/primary_color"
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:contentDescription="notifications button" />
        -->

    <fragment
        android:id="@+id/map_driver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_connect_driver"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textColor="@color/white_color"
        android:backgroundTint="@color/primary_color"
        android:text="Conectar"
        app:cornerRadius="12dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="30dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>