<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context=".driver.HomeDriverActivity">

    <include layout="@layout/action_bar_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.DiagonalView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:elevation="4dp"
            app:shape_diagonal_angle="4"
            app:shape_diagonal_position="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_color"/>

            <io.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:elevation="4dp"
                app:shape_circle_borderColor="@color/gray_color"
                app:shape_circle_borderWidth="2dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_photo"
                    android:contentDescription="Profile picture"/>

            </io.github.florent37.shapeofview.shapes.CircleView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right|center"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Jonathan Luis Rios lopezx campos"
                    android:textStyle="bold"
                    android:textColor="@color/white_color"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conductor"
                    android:textColor="@color/white_color"
                    android:textSize="18sp" />

            </LinearLayout>

        </io.github.florent37.shapeofview.shapes.DiagonalView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:columnCount="4"
            android:rowCount="1"
            android:layout_marginHorizontal="8dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_credits"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:backgroundTint="@color/white_color"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Creditos"
                    app:drawableTopCompat="@drawable/ic_coin"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_update_profile"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/white_color"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Actualizar perfil"
                    app:drawableTopCompat="@drawable/ic_user_single"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_history"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:backgroundTint="@color/white_color"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Historial de viajes"
                    app:drawableTopCompat="@drawable/ic_historial"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_notifications"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:backgroundTint="@color/white_color"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Notificaciones"
                    app:drawableTopCompat="@drawable/ic_baseline_notifications_32"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Dias disponibles"
            android:textColor="@color/black_second"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_clock"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/txt_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="8dp"
            android:text="5 dias disponibles en la app"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingVertical="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_marginBottom="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Recomendaciones"
                android:textColor="@color/black_second"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_baseline_warning_24"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para reducir el riesgo de accidentes en la vía pública debemos fomentar una cultura vial en la que todas y todos nos cuidamos"
                android:textSize="14sp"
                android:background="#E9FFF7"
                android:textColor="@color/black_second"
                android:padding="8dp"
                android:layout_marginHorizontal="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="end"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/btn_started"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Iniciar"
            />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>