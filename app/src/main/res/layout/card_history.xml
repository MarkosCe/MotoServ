<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/img_card_photo"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_baseline_account_box_24"
            android:scaleType="centerCrop"
            android:contentDescription="photo profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textColor="@color/com_facebook_blue"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txt_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del usuario"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:maxLines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen:"
                android:textColor="@color/com_facebook_blue"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txt_card_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion de origen"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/txt_card_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destino:"
                android:textColor="@color/com_facebook_blue"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion de destino"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:maxLines="2"/>

        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>